<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SecureChatClient" parent="Theme.MaterialComponents.Light.NoActionBar" />
    <style name="StartScreensButtons" parent="Widget.MaterialComponents.Button">
        <!-- Background color -->
        <item name="backgroundTint">@color/start_screens_buttons_background</item>
        <!-- Text color -->
        <item name="android:textColor">@color/white</item>
        <!-- Border radius -->
        <item name="cornerRadius">20dp</item>
        <!-- Stroke color and width -->
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">3dp</item>
    </style>
    <style name="StartPagesErrorMessage">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="ChatListPageUserSearchBar" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/chat_list_search_bar_hint</item>
    </style>
</resources>